<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/yderstelayout"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_vertical">

  <ImageView
      android:id="@+id/kanallogo"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentLeft="true"
      android:scaleType="center"
      android:src="@drawable/dr_logo"
      android:visibility="visible"
      tools:ignore="ContentDescription"/>

  <LinearLayout
      android:layout_width="0px"
      android:layout_weight="1"
      android:orientation="vertical"
      android:layout_height="wrap_content">

    <TextView
        android:id="@+id/titel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ramasjang: Formiddag"
        android:textColor="@color/hvid"
        android:textStyle="bold"
        android:maxLines="2"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/kanallogo"/>

    <TextView
        android:id="@+id/metainformation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="P3"
        android:textColor="@color/hvid"
        android:visibility="visible"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/kanallogo"/>
  </LinearLayout>

  <ProgressBar
      android:id="@+id/progressBar"
      android:layout_toLeftOf="@id/startStopKnap"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>

  <ImageView
      android:id="@+id/startStopKnap"
      android:contentDescription="start/stop"
      android:layout_width="60dp"
      android:layout_height="44dp"
      android:src="@drawable/afspiller_spil"/>

  <ImageView
      android:id="@+id/luk"
      android:contentDescription="luk"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="top"
      android:src="@drawable/dri_luk_hvid"/>


</LinearLayout>