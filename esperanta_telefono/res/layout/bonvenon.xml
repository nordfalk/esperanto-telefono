<?xml version="1.0" encoding="UTF-8"?>
<ScrollView
   xmlns:android="http://schemas.android.com/apk/res/android"
   android:id="@+id/rodLayout"
   android:layout_width="fill_parent" android:layout_height="fill_parent">
<TableLayout
  android:padding="20dip"
  android:layout_width="fill_parent" android:layout_height="wrap_content" >

<ImageView android:id="@+id/flago"
  android:paddingBottom="10dip"
  android:adjustViewBounds="true"
  android:layout_width="wrap_content" android:layout_height="wrap_content"/>


<Button android:id="@+id/instali"
  android:text="Instali Esperanto-programoj en via telefono"
  android:padding="20dip"
  android:textSize="20dip"
  android:layout_width="wrap_content" android:layout_height="wrap_content"/>

<Button android:id="@+id/filmoj"
  android:text="Filmoj"
  android:padding="20dip"
  android:textSize="20dip"
  android:layout_width="wrap_content" android:layout_height="wrap_content"/>

<Button android:id="@+id/inviti"
  android:text="Invitu aliajn instali la programon"
  android:padding="20dip"
  android:textSize="20dip"
  android:layout_width="wrap_content" android:layout_height="wrap_content"/>

        </TableLayout>
</ScrollView>
