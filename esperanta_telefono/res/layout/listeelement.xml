<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="wrap_content" android:layout_height="wrap_content">
  <ImageView
    android:id="@+id/listeelem_billede"
    android:layout_margin="5dip"
    android:layout_width="60dip" android:layout_height="40dip"
    android:scaleType="centerCrop"
    android:src="@drawable/flago" />

  <TableLayout
    android:layout_weight="1"
    android:layout_gravity="left|center_vertical"
    android:layout_marginLeft="5dip"
    android:layout_width="fill_parent" android:layout_height="wrap_content">

  <TextView
    android:id="@+id/listeelem_overskrift"
    android:textSize="20sp"
    android:text="overskrift"
    android:shadowRadius="5"
    android:textColor="#ffffff"
    android:shadowColor="#00ffff"
    android:shadowDy="3"
    android:shadowDx="5"
    android:layout_width="fill_parent" android:layout_height="wrap_content"/>
  <TextView
    android:id="@+id/listeelem_beskrivelse"
    android:textSize="12sp"
    android:text="beskrivelse"
    android:layout_width="fill_parent" android:layout_height="wrap_content"/>
  </TableLayout>
</LinearLayout>
